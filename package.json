{
  "name": "docbuilder",
  "version": "1.0.0",
  "description": "Document Builder",
  "main": "main.js",
  "scripts": {
    "test": "mocha ",
    "start": "electron . --inspect=9229",
    "build-start": "npm run build ; npm run start",
    "build": "run-p build:*",
    "build:webpack": "webpack",
    "build:sass": "node-sass -r sass/bootstrap.scss build/style.css --source-map true",
    "build:node": "tsc -p tsconfig.node.json",
    "watch": "run-p watch:*",
    "watch:webpack": "npm run build:webpack -- -w",
    "watch:sass": "npm run build:sass -- -w",
    "watch:node": "npm run build:node -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcapinc/docbuilder.git"
  },
  "author": "Jeffrey Parrish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcapinc/docbuilder/issues"
  },
  "homepage": "https://github.com/jcapinc/docbuilder#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^7.3.2",
    "sourcemap": "^0.1.0",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "electron": "^5.0.0",
    "quill": "^1.3.6",
    "react": "^16.8.6"
  }
}
